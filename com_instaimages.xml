    <description>A component for adding Instagram images to Joomla articles</description>
    <media destination="instaimages" folder="media/instaimages">
        <folder>assets</folder>
    </media>
    <languages folder="admin/language">
            <language tag="en-GB">en-GB.com_instaimages.ini</language>
            <language tag="en-GB">en-GB.com_instaimages.sys.ini</language>

    </languages>
    <administration>
        <menu img="../media/instaimages/assets/images/instaimages-16x16.png" link="index.php?option=com_instaimages">InstaImages</menu>
            <!--
            <submenu>
                <menu  link="option=com_instaimages&amp;view=imagepicker">Imagepicker</menu>
            </submenu>
            -->
            <files folder="admin">
                <filename>config.xml</filename>
                <filename>admin.instaimages.php</filename>
                <filename>controller.php</filename>
                <filename>index.html</filename>
                <filename>access.xml</filename>			
                <folder>assets</folder>
                <folder>elements</folder>		
                <folder>controllers</folder>
                <folder>helpers</folder>
                <folder>lib</folder>
                <folder>models</folder>
                <folder>views</folder>									
            </files>	
        <languages folder="admin/language">
            <language tag="en-GB">en-GB.com_instaimages.ini</language>
            <language tag="en-GB">en-GB.com_instaimages.sys.ini</language>
        </languages>		
    </administration>
